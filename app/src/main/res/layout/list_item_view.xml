<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/crew_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/id"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/crew_image"
            app:layout_constraintEnd_toEndOf="@+id/crew_image"
            app:layout_constraintStart_toStartOf="@+id/crew_image"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/crew_image"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/crew_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:text="@string/name"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/crew_image"
            app:layout_constraintStart_toEndOf="@+id/crew_image"
            app:layout_constraintTop_toTopOf="@+id/crew_image"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/crew_agency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/agency"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/crew_name"
            app:layout_constraintStart_toEndOf="@+id/crew_name"
            app:layout_constraintTop_toTopOf="@+id/crew_name" />

        <TextView
            android:id="@+id/crew_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/status"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/crew_agency"
            app:layout_constraintStart_toEndOf="@+id/crew_agency"
            app:layout_constraintTop_toTopOf="@+id/crew_agency" />

        <TextView
            android:id="@+id/crew_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Weblink"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/crew_status"
            app:layout_constraintStart_toStartOf="@+id/crew_name"
            app:layout_constraintTop_toBottomOf="@+id/crew_agency" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>